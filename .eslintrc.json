{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "camelcase": "off",
        "no-useless-escape": "off"
    },
    "ignorePatterns": ["**/lib/**"],
    "overrides": [
        {
            "files": "**/static/**",
            "rules": {
                "no-undef": "off",
                "no-unused-vars": "off"
            }
        }
    ]
}
